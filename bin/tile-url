#!/usr/bin/env node

/*
 * Usage: bin/tile-url [viz.json url here]
 */
var lib = require('../viz-tile-url');
var vizUrl = process.argv[2];

if (!vizUrl || vizUrl.indexOf('viz.json') === -1) {
  console.error('Invalid viz.json url provided');
  process.exit(1);
}

lib(process.argv[2])
  .then(function (url) {
    console.log(url);
  })
  .catch(function (error) {
    console.error(error);
    process.exit(1);
  });
